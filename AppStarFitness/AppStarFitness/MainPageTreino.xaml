<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppStarFitness.MainPageTreino">
    
    <ContentPage Title="Adicionar Treino">
        <StackLayout>
            <Label x:Name="lbl_nome_treino" Text="!!!!!!!!!!!!!!!!!!!!!!DESCONSIDERAR ESSA TELA!!!!!!!!!!!!!!!!!!!!! " FontSize="20"/>
        </StackLayout>
    </ContentPage>

    <ContentPage Title="Treinos">
        <ScrollView>
            <StackLayout>
                <Frame BorderColor="#3ca65a" CornerRadius="15" Margin="20">
                    <Grid ColumnDefinitions="*, *">
                        <Picker x:Name="pck_treino" SelectedIndexChanged="pck_treino_SelectedIndexChanged" Title="Selecionar treino" Grid.Column="0"/>
                        <Button x:Name="btn_abrir2" Text="abrir" Clicked="btn_abrir2_Clicked" Grid.Column="1" BackgroundColor="Transparent" />
                    </Grid>
                </Frame>
            </StackLayout>
        </ScrollView>
    </ContentPage>
</TabbedPage>