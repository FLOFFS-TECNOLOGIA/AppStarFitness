<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppStarFitness.View.TreinoDoDia">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lbl_treino_dia" Text="TREINO DO DIA (Ex: Segunda - COSTAS)" FontSize="20" HorizontalTextAlignment="Center"/>

            <Button Text="Remada baixa" Clicked="Button_Clicked"/>
            <Button Text="Remada alta" Clicked="Button_Clicked"/>
            <Button Text="Puxada baixa" Clicked="Button_Clicked"/>
            <Button Text="Puxada alta" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>